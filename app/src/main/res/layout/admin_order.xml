<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/textView"
                android:layout_width="211dp"
                android:layout_height="36dp"
                android:text="Order Management"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="16dp" />

            <ScrollView
                android:layout_width="412dp"
                android:layout_height="626dp"
                android:background="#F6EEDE"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="104dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="cafe.app.ui.notifications.NotificationsFragment"
                android:layout_width="53dp"
                android:layout_height="76dp"
                android:foreground="@android:drawable/sym_action_email"
                tools:layout_editor_absoluteX="333dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="132dp"
                android:layout_height="111dp"
                app:srcCompat="@drawable/cafe_logo"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>